<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/returnbtn15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rules"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/account"
        app:layout_constraintStart_toStartOf="@+id/account"
        app:layout_constraintTop_toBottomOf="@+id/account"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pingtaiguize" />

    <ImageButton
        android:id="@+id/account"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toBottomOf="@+id/information"
        app:srcCompat="@drawable/zhanghuanquan" />

    <ImageButton
        android:id="@+id/information"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/tMyNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tMyNumber"
        app:layout_constraintTop_toBottomOf="@+id/tMyNumber"
        app:srcCompat="@drawable/gerenxinxi" />

    <ImageButton
        android:id="@+id/keep"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shoucang" />

    <TextView
        android:id="@+id/tMyNumber"
        android:layout_width="284dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="电话号码"
        app:layout_constraintEnd_toEndOf="@+id/tMyName"
        app:layout_constraintStart_toStartOf="@+id/tMyName"
        app:layout_constraintTop_toBottomOf="@+id/tMyName" />

    <TextView
        android:id="@+id/tMyName"
        android:layout_width="284dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="用户名"
        app:layout_constraintEnd_toEndOf="@+id/keep"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <TextView
        android:id="@+id/myInfo"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="我的信息"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:background="@drawable/dada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999"
        tools:srcCompat="@drawable/dada" />

</androidx.constraintlayout.widget.ConstraintLayout>