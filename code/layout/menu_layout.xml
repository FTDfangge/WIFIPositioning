<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tRecommend"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="猜你喜欢"
        app:layout_constraintEnd_toEndOf="@+id/topic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <ListView
        android:id="@+id/recommend"
        android:layout_width="340dp"
        android:layout_height="205dp"
        android:background="#F4D19E"
        app:layout_constraintEnd_toEndOf="@+id/tRecommend"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tRecommend"
        app:layout_constraintTop_toBottomOf="@+id/tRecommend">

    </ListView>

    <ImageButton
        android:id="@+id/location"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/nearby"
        app:srcCompat="@drawable/dingwei" />

    <ImageButton
        android:id="@+id/nearby"
        android:layout_width="284dp"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tStudy"
        app:srcCompat="@drawable/zhoubian" />

    <TextView
        android:id="@+id/tAll"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="全部"
        app:layout_constraintBottom_toBottomOf="@+id/tOther"
        app:layout_constraintEnd_toEndOf="@+id/all"
        app:layout_constraintStart_toStartOf="@+id/all"
        app:layout_constraintTop_toTopOf="@+id/tOther" />

    <TextView
        android:id="@+id/tOther"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="其他"
        app:layout_constraintBottom_toBottomOf="@+id/tOffice"
        app:layout_constraintEnd_toEndOf="@+id/other"
        app:layout_constraintStart_toStartOf="@+id/other"
        app:layout_constraintTop_toTopOf="@+id/tOffice" />

    <TextView
        android:id="@+id/tOffice"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="办公室"
        app:layout_constraintBottom_toBottomOf="@+id/tStudy"
        app:layout_constraintEnd_toEndOf="@+id/office"
        app:layout_constraintStart_toStartOf="@+id/office"
        app:layout_constraintTop_toTopOf="@+id/tStudy" />

    <TextView
        android:id="@+id/tStudy"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="自习室"
        app:layout_constraintEnd_toEndOf="@+id/study"
        app:layout_constraintStart_toStartOf="@+id/study"
        app:layout_constraintTop_toBottomOf="@+id/study" />

    <ImageButton
        android:id="@+id/other"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/office"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/office"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <ImageButton
        android:id="@+id/office"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/searchText"
        tools:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/study"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/office"
        app:layout_constraintEnd_toStartOf="@+id/office"
        app:layout_constraintTop_toTopOf="@+id/office"
        app:srcCompat="@android:drawable/ic_menu_mapmode" />

    <TextView
        android:id="@+id/tMine"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="我的"
        app:layout_constraintEnd_toEndOf="@+id/mine"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mine"
        app:layout_constraintTop_toBottomOf="@+id/mine" />

    <EditText
        android:id="@+id/searchText"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="请输入导航目的地"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/searchbtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/mine"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/all"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/other"
        app:layout_constraintStart_toEndOf="@+id/other"
        app:layout_constraintTop_toTopOf="@+id/other"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/mine"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/dada"
        android:foreground="@drawable/dada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/searchbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_search_category_default" />

    <ImageButton
        android:id="@+id/topic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/resou" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />

</androidx.constraintlayout.widget.ConstraintLayout>